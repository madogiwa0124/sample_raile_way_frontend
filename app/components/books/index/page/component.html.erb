<div class="<%= component_class_name %>">
  <%= render Ui::Alert::Component.new(notice: helpers.notice) %>
  <h1>Books</h1>

  <table id="books" class="tw-border-collapse tw-mb-4 tw-bg-white">
    <tr class="tw-bg-green-300">
      <th class="tw-p-4">Id</th>
      <th class="tw-p-4">Title</th>
      <th class="tw-p-4">Body</th>
      <th class="tw-p-4">Actions</th>
    </tr>
    <% @books.each do |book| %>
      <%= render book %>
    <% end %>
  </table>

  <%= render(Ui::Link.new(text: "New book", path: new_book_path, options: { id: 'new-book' }))%>
</div>
